$(document).ready(function() {
            $('#form_footer_subscribe').on('submit', function(e) {
                e.preventDefault();  // Prevent the default form submission behavior
        
                var email = $('#txt_footer_email_subscribe').val();
                var postData = {
                    email: email
                };
        
                // Disable the submit button
                $('button[type="submit"]').prop('disabled', true);
        
                // Make AJAX POST request
                $.post('/subscribe', postData, function(data, status) {
                    var message = '';
                    var title = error_ex; // Default title for error scenarios
        
                    if (status === 'success') {
                        switch (data.response) {
                            case 'ok':
                                message = subscribed_msg;
                                title = success; // Set title for success
                                $('#txt_footer_email_subscribe').val('');
                                break;
                            case 'existing':
                                message = already_subscribe_msg;
                                title = success; // Set title for already subscribed
                                $('#txt_footer_email_subscribe').val('');
                                break;
                            default:
                                message = error_response;
                                title = error_ex;
                                break;
                        }
                    } else {
                        message = connection_error;
                        title = error_ex;
                    }
        
                    // Update the modal title and body text
                    $('#successModal .modal-title').text(title);
                    $('#txt_success').text(message);
                    $('#successModal').modal('show');
        
                    // Hide the modal after 3 seconds
                    setTimeout(function() {
                        $('#successModal').modal('hide');
                        $('button[type="submit"]').prop('disabled', false); // Re-enable the button
                    }, 3000);
                })
                .fail(function() {
                    $('#successModal .modal-title').text(error_ex);
                    $('#txt_success').text(failed_connect);
                    $('#successModal').modal('show');
                    setTimeout(function() {
                        $('#successModal').modal('hide');
                        $('button[type="submit"]').prop('disabled', false); // Re-enable the button
                    }, 3000);
                });
            });
        });