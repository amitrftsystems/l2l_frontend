$(function () {
    $("#slider-range").slider({
        range: true,
        min: 0,
        max: maxPriceRange,  // Use the global variable for the maximum price range
        values: [0, maxPriceRange],  // Example initial values
        slide: function (event, ui) {
            $("#amount-min").val(currencySuffix + ui.values[0]);  // Use the currency suffix
            $("#amount-max").val(currencySuffix + ui.values[1]);  // Use the currency suffix
        },
    change: function(event, ui) {
        updateSearch();
    }
    });

    $("#amount-min").val(currencySuffix + $("#slider-range").slider("values", 0));
    $("#amount-max").val(currencySuffix + $("#slider-range").slider("values", 1));

    $("#amount-min, #amount-max").on("input", function () {
        var numericValue = parseInt($(this).val().replace(/\D/g, "") || 0);
        if ($(this).attr("id") === "amount-min") {
            $("#slider-range").slider("values", 0, numericValue);
        } else {
            $("#slider-range").slider("values", 1, numericValue);
        }
        $(this).val(currencySuffix + numericValue);
    });
});

  
$(function () {
    $("#slider-range1").slider({
        range: true,
        min: 0,
        max: maxAreaRange,  // Use the global variable set in EJS
        values: [0, maxAreaRange], // Example initial values
        slide: function (event, ui) {
            $("#amount1-min").val(ui.values[0] + " " + unitAreaSuffix);
            $("#amount1-max").val(ui.values[1] + " " + unitAreaSuffix);
        },
    change: function(event, ui) {
        updateSearch();
    }
    });

    $("#amount1-min").val($("#slider-range1").slider("values", 0) + " " + unitAreaSuffix);
    $("#amount1-max").val($("#slider-range1").slider("values", 1) + " " + unitAreaSuffix);

    $("#amount1-min, #amount1-max").on("input", function () {
