        if ($(this).attr("id") === "amount1-min") {
            $("#slider-range1").slider("values", 0, numericValue);
        } else {
            $("#slider-range1").slider("values", 1, numericValue);
        }
        
        $(this).val(numericValue + " " + unitAreaSuffix);
